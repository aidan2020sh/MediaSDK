<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <ImportGroup Label="PropertySheets" />
  <PropertyGroup>
    <BuildDirsPropsImported>true</BuildDirsPropsImported>
  </PropertyGroup>

  <PropertyGroup Label="UserMacros">
    <TypeSuffix Condition="'$(ConfigurationType)'=='StaticLibrary'">lib</TypeSuffix>
    <TypeSuffix Condition="'$(ConfigurationType)'=='DynamicLibrary' or '$(ConfigurationType)'=='Application'">bin</TypeSuffix>
    <PlatformDir Condition="'$(DevWinEdition)' == 'Desktop'">win_$(Platform)</PlatformDir>
    <PlatformDir Condition="'$(DevWinEdition)' == 'Mobile' and '$(Platform)'=='Win32'">win_thm32</PlatformDir>
    <PlatformDir Condition="'$(DevWinEdition)' == 'Mobile' and '$(Platform)'=='x64'">win_thm64</PlatformDir>
  </PropertyGroup>

  <PropertyGroup>
    <IntDir>$(MSDK_MFX_BUILD_DIR)\$(PlatformDir)\objs\$(Configuration)\$(ProjectName)\</IntDir>
    <OutDir>$(MSDK_MFX_BUILD_DIR)\$(PlatformDir)\$(TypeSuffix)\</OutDir>
  </PropertyGroup>

  <Target Name="MediaSdkBuildDirCheck" BeforeTargets="Build">
    <Warning Text="Unable to find MSDK_MFX_BUILD_DIR user macro."
       Condition ="!Exists('$(MSDK_MFX_BUILD_DIR)')" />
  </Target>
</Project>