# Importing MFX utilities module
import mfx_utils

# Importing variables
Import('mfx_lib_env')
Import('mfx_lib_merged_impl_objs')

# Creating build environment
bld_env = mfx_lib_env.Clone()
bld_env['MFX_CURDIR'] = '#_studio/mfx_lib'
bld_env['MFX_ACCEL'] = 'MFX_VA' # this will take effect only if 'hw' mode is being built

# Compiling library
bld_env.StaticLibrary(target = mfx_utils.get_build_name(bld_env, 'mfx_lib_merged'), source = mfx_lib_merged_impl_objs)
